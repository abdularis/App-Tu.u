<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aar.app.apptuu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".features.videolist.VideoListActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".features.videolist.VideoPlayerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity android:name=".features.AboutActivity"
                  android:label="@string/menu_about"
            android:parentActivityName=".features.MainActivity">
        </activity>
    </application>

</manifest>